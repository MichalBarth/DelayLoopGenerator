<Window x:Class="CycleCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CycleCounter"
        xmlns:viewmodel="clr-namespace:CycleCounter.ViewModels"
        mc:Ignorable="d"
        Title="AVR delay loop generator" Height="450" Width="679.373">
    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>
    <Grid Margin="0,0,2,0">
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="420" Margin="-2,0,0,0" Stroke="Black" VerticalAlignment="Top" Width="180"/>
        <TextBlock HorizontalAlignment="Left" Margin="19,45,0,0" TextWrapping="Wrap" Text="1. Decide wether to input:" VerticalAlignment="Top" Width="172"/>
        <RadioButton Content="Cycles:" HorizontalAlignment="Left" Margin="19,66,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="or time and cycle rate:" HorizontalAlignment="Left" Margin="19,87,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="34,108,0,0" TextWrapping="Wrap" Text="Time/sec:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="34,129,0,0" TextWrapping="Wrap" Text="Cycle rate:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="19,161,0,0" TextWrapping="Wrap" Text="2. Click on GO-Button:" VerticalAlignment="Top"/>
        <Button Content="GO" HorizontalAlignment="Left" Margin="34,182,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBlock HorizontalAlignment="Left" Margin="19,225,0,0" TextWrapping="Wrap" Text="3. Save the source code:" VerticalAlignment="Top"/>
        <Button Content="☺" HorizontalAlignment="Left" Margin="34,246,0,0" VerticalAlignment="Top" Width="25"/>
        <TextBlock HorizontalAlignment="Left" Margin="31,283,0,0" TextWrapping="Wrap" Text="or copy for Copy/Paste:" VerticalAlignment="Top"/>
        <Button Content="☻" HorizontalAlignment="Left" Margin="34,304,0,0" VerticalAlignment="Top" Width="25"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="31" Stroke="Black" VerticalAlignment="Top" Width="671" Margin="-2,0,0,0"/>
        <Button Content="♫" HorizontalAlignment="Left" Margin="3,5,0,0" VerticalAlignment="Top" Width="25"/>

    </Grid>
</Window>
